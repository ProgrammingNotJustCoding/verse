{
  "name": "server",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --target=node20 --format=esm --outdir=dist --sourcemap --external:@hono/* --external:@livekit/* --external:argon2 --external:dotenv --external:drizzle-orm --external:form-data --external:hono --external:jsonwebtoken --external:livekit-server-sdk --external:nanoid --external:pino --external:postgres --external:prism-media --external:ulid --external:ws --external:zod --external:redis --external:node:*",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.0",
    "@livekit/rtc-node": "^0.13.20",
    "@types/form-data": "^2.5.2",
    "@types/ws": "^8.18.1",
    "argon2": "^0.44.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.5",
    "drizzle-orm": "^0.44.6",
    "form-data": "^4.0.4",
    "hono": "^4.9.4",
    "jsonwebtoken": "^9.0.2",
    "livekit-server-sdk": "^2.14.0",
    "nanoid": "^5.1.6",
    "pino": "^10.1.0",
    "postgres": "^3.4.7",
    "prism-media": "^1.3.5",
    "redis": "^5.9.0",
    "ulid": "^3.0.1",
    "ws": "^8.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.17",
    "@verse/eslint-config": "workspace:*",
    "@verse/prettier-config": "workspace:*",
    "@verse/tsconfig": "workspace:*",
    "drizzle-zod": "^0.8.3",
    "esbuild": "^0.20.2",
    "eslint": "^9.33.0",
    "pino-pretty": "^13.1.2",
    "prettier": "^3.0.0",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  },
  "prettier": "@verse/prettier-config"
}
